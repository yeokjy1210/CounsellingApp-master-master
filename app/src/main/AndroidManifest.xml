<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.raymond.counsellingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hope_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hope_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".eventDetail" />
        <activity android:name=".counselorList" />
        <activity android:name=".aboutUs" />
        <activity android:name=".eventList" />
        <activity android:name=".counselorDetail" />
        <activity android:name=".SelectSchedule"/>
        <activity
            android:name=".homepage"
            android:label="@string/title_activity_homepage"
            android:theme="@style/AppTheme" />
        <activity android:name=".login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register"
            android:parentActivityName=".login" />
        <activity
            android:name=".ScheduleTable"
            android:label="View Schedule">
        </activity>
        <activity
            android:name=".userProfile"
            android:label="Profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".updateProfile"
            android:label="Update Profile"
            android:theme="@style/AppTheme" />
    </application>

</manifest>